<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.destecs.ide.simeng.ui"
            name="Sample Category">
      </category>
      <view
            category="org.destecs.ide.simeng.ui"
            class="org.destecs.ide.simeng.ui.views.SampleView"
            icon="icons/sample.gif"
            id="org.destecs.ide.simeng.ui.views.SampleView"
            name="Sample View">
      </view>
      <view
            class="org.destecs.ide.simeng.ui.CoSimStarterView"
            id="org.destecs.ide.simeng.ui.cosimstarter"
            name="Co-Sim Starter"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="org.destecs.ide.simeng.ui.views.SampleView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
